[core]
    editor = $EDITOR
    trustctime = false

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = cyan

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green

[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[pull]
    ff = only

[push]
    default = current
    followTags = true

[rebase]
    missingCommitsCheck = warn
    # Interactive Rebase right-hand side format
    instructionFormat = "[%an] %s (%cr)"

[alias]
    st = status
    co = checkout
    stat = status
    oops = reset HEAD~
    plg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    dlg = log --graph --oneline --simplify-by-decoration

[credential]
    helper = cache --timeout=300

[include]
    path = ./.git.identity
