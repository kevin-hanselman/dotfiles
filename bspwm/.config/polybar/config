; See: https://github.com/polybar/polybar/wiki/Configuration

[global/wm]
; Adjust the _NET_WM_STRUT_PARTIAL top value
;   Used for top aligned bars
;margin-top = 20

; Adjust the _NET_WM_STRUT_PARTIAL bottom value
;   Used for bottom aligned bars
;margin-bottom = 0

[colors]
transparent = #99000000
invisible = #0000
background = ${xrdb:background}
foreground = ${xrdb:foreground}
red = ${xrdb:color1}
yellow = ${xrdb:color3}
dim = ${xrdb:color8}

[settings]
; Define fallback values used by all module formats
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-padding = 1
; margin between multiple labels in a module
; e.g. bspwm workspace module
;format-margin = 1

[bar/top]
; Use either of the following command to list available outputs:
; If unspecified, the application will pick the first one it finds.
; If no monitor is given, the primary monitor is used if it exists
monitor =

; Relax requirement that the monitor must be in connected state
; XRandR sometimes reports my monitor as being disconnected (when in use)
monitor-strict = false

width = 90%
height = 22

offset-x = 5%
offset-y = 8

radius = 0.0

;border-left-size = 8
;border-right-size = 8
;border-top-size = 8
;border-color = ${colors.invisible}

padding-left = 0
; leave room for detached tray
padding-right = 15

module-margin = 1

font-0 = EnvyCodeR:size=10
font-1 = EnvyCodeR:size=8
font-2 = xos4 Terminus:size=6

background = ${colors.background}
foreground = ${colors.foreground}
separator =

modules-left = bspwm stocks
modules-center = date weather
modules-right = cpu memory packages volume battery

tray-position = right
tray-padding = 5
tray-detached = true
tray-background = ${colors.background}

underline-size = 2
underline-color = ${colors.foreground}
wm-restack = bspwm


[module/date]
type = internal/date
interval = 5.0
date = %b %e
time = %l:%M %p
label = %{A1:orage --toggle:}%date%, %time%%{A}


[module/battery]
format-charging-background = ${settings.format-background}
format-charging-padding = ${settings.format-padding}
format-discharging-background = ${settings.format-background}
format-discharging-padding = ${settings.format-padding}
format-full-background = ${settings.format-background}
format-full-padding = ${settings.format-padding}

type = internal/battery
battery = BAT0
adapter = AC

format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>
label-discharging = BAT-- %percentage%% %time%
label-charging = BAT++ %percentage%% %time%
label-full = BAT %percentage%%
time-format = (%H:%M)


[module/battery_fa_icons]
inherit = module/battery

format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-discharging = %percentage%% %time%
label-charging =  %percentage%% %time%
label-full =  %percentage%%
time-format = (%H:%M)

; lightning bolt!
;label-charging =  %percentage%% %time%
;label-full =  %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; enable this by changing 'format-charging' above
animation-charging-0 = ${self.ramp-capacity-0}
animation-charging-1 = ${self.ramp-capacity-1}
animation-charging-2 = ${self.ramp-capacity-2}
animation-charging-3 = ${self.ramp-capacity-3}
animation-charging-4 = ${self.ramp-capacity-4}
animation-charging-framerate = 500

[module/battery_md_icons]
inherit = module/battery

format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-discharging = %percentage%% %time%
label-charging =  %percentage%% %time%
label-full =  %percentage%%
time-format = (%H:%M)

; lightning bolt!
;label-charging =  %percentage%% %time%
;label-full =  %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-6 = 
ramp-capacity-7 = 
ramp-capacity-8 = 
ramp-capacity-9 = 

; enable this by changing 'format-charging' above
animation-charging-0 = ${self.ramp-capacity-0}
animation-charging-1 = ${self.ramp-capacity-1}
animation-charging-2 = ${self.ramp-capacity-2}
animation-charging-3 = ${self.ramp-capacity-3}
animation-charging-4 = ${self.ramp-capacity-4}
animation-charging-framerate = 500


[module/battery_hearts]
inherit = module/battery

format-charging = <bar-capacity> <label-charging>
format-discharging = <bar-capacity> <label-discharging>
format-full = <bar-capacity> <label-full>
label-charging =  %percentage%% %time%
label-discharging = %percentage%% %time%
label-full =  %percentage%%
time-format = (%H:%M)

bar-capacity-foreground-0 = ${colors.red}
bar-capacity-width = 5
bar-capacity-fill = 
bar-capacity-empty = 
bar-capacity-indicator =


[module/bspwm]
type = internal/bspwm

; Only show workspaces defined on the same output as the bar
; Default: true
pin-workspaces = false

format = <label-monitor> <label-state>
label-monitor = "%name%:"
label-focused = " %name% "
label-focused-underline = ${colors.foreground}
label-occupied = " %name% "
label-occupied-foreground = ${colors.dim}
label-empty =


[module/memory]
type = internal/memory
interval = 3
format = <label>
label = RAM %gb_used% / %gb_total%


[module/cpu]
type = internal/cpu
format = <label> <ramp-coreload>
label = CPU %percentage%%

ramp-coreload-font = 2
ramp-coreload-4-foreground = ${colors.yellow}
ramp-coreload-5-foreground = ${colors.yellow}
ramp-coreload-6-foreground = ${colors.red}
ramp-coreload-7-foreground = ${colors.red}
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █


[module/temperature]
type = internal/temperature
interval = 3

; Thermal zone to use
; To list all the zone types, run
; $ for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
; Default: 0
thermal-zone = 1

; Threshold temperature to display warning label
warn-temperature = 75
format = <ramp> <label>
label = TEMP %temperature%
label-warn = TEMP %temperature%
label-warn-foreground = ${colors.red}
ramp-0 =


[module/volume]
type = internal/pulseaudio

; increase/decrease volume interval
interval = 5

format-volume-background = ${settings.format-background}
format-volume-padding = ${settings.format-padding}
format-muted-background = ${settings.format-background}
format-muted-padding = ${settings.format-padding}

format-volume = <label-volume>

label-muted-foreground = ${colors.dim}
label-muted = "VOL ---"
label-volume = VOL %percentage%%

click-left = pactl set-sink-mute @DEFAULT_SINK@ toggle


[module/volume_icons]
inherit = module/volume

format-volume = <ramp-volume> <label-volume>
label-muted = 
label-volume = %percentage%%

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 


[module/packages]
type = custom/script
exec = ~/.config/polybar/package_update_checker.py
interval = 300
; Tux!
;label =  %output%
label = PKG %output%


[module/weather]
type = custom/script
exec = ~/.config/polybar/weather.sh
interval = 1800
label = %{A1:~/.config/polybar/weather_gui.sh:}%output%%{A}


[module/stocks]
type = custom/script
exec = ~/.config/polybar/ticker.py
interval = 300
label-font = 2

